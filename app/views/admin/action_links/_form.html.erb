<div class='form-group'>
  <%= f.label :name, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <%= f.text_field :name %>
  </div>
</div>
<div class='form-group'>
  <%= f.label :description, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <%= f.text_area :description, size: '100x5' %>
  </div>
</div>
<div class='form-group'>
  <%= f.label :url, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <%= f.text_field :url %>
  </div>
</div>
<div class='form-group'>
  <%= f.label :policies, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <% @policies.each do |policy| %>
      <div class='row'>
        <div class='col-sm-12'>
          <%= label_tag do %>
            <%= check_box_tag 'action_link[policy_ids][]', policy.id, action_link.policies.include?(policy) %>
            <%= policy.name %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br/>
