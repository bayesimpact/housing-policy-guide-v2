<div class='form-group'>
  <%= f.label :name, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <%= f.text_field :name %>
  </div>
</div>
<div class='form-group'>
  <%= f.label :description, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <%= f.text_area :description, size: '100x5' %>
  </div>
</div>
<div class='form-group'>
  <%= f.label :url, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <%= f.text_field :url %>
  </div>
</div>
<div class='form-group'>
  <%= f.label :policy, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <%= f.collection_select :policy_id, @policies, :id, :name, { prompt: 'Select a policy' } %>
  </div>
</div>

<br/>
