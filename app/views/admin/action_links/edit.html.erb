<div class='container admin'>
  <div class='row'>
    <div class='col-sm-12'>
      <%= form_for @action_link, url: admin_action_link_path(@action_link), method: 'PUT', html: { role: 'form', class: 'form-horizontal' } do |f| %>
        <div class='row'>
          <div class='col-sm-6'>
            <%= f.submit 'Update', class: 'btn btn-default btn-large' %>
          </div>
          <div class='col-sm-6'>
            <h3><%= link_to 'All Action Links', admin_action_links_path %></h3>
          </div>
        </div>
        <%= render partial: 'form', locals: { f: f, action_link: @action_link } %>
        <%= f.submit 'Update', class: 'btn btn-default btn-large' %>
      <% end %>
    </div>
  </div>
</div>
