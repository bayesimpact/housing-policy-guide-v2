<div class='container'>
  <div class='row'>
    <div class='col-sm-10'>
      <h2><%= @dataset.name %></h2>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-12' data-no-turbolink>
      <h4> <%= link_to 'Edit', edit_admin_dataset_path(@dataset.id) %> | <%= link_to 'Delete', admin_dataset_path(@dataset.id), method: 'Delete' %> </h4>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-12'>
      <h3>Policy data groups:</h3>
      <% @dataset.data_groups.each do |data_group| %>
        <%= link_to data_group.name, admin_data_group_path(data_group) %> |
      <% end %>
      Edit in the <%= link_to 'Data Groups admin section', admin_data_groups_path %>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-12'>
      <h3>Source Description</h3>
      <%= @dataset.source_description.html_safe %>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-12'>
      <h3>Notes</h3>
      <%= @dataset.notes.html_safe %>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-12'>
      <h3>Source Url</h3>
      <%= link_to @dataset.source_url, @dataset.source_url, target: '_blank' %>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-12'>
      <h3>Visualization iframe string</h3>
      <%= @dataset.visualization_iframe %>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-12'>
      <h3>Chart Title</h3>
      <%= @dataset.chart_title.try(:html_safe) %>
    </div>
  </div>
  <%= @dataset.visualization_iframe.html_safe if @dataset.visualization_iframe %>
  <div class='row'>
    <div class='col-sm-12' data-no-turbolink>
      <h4> <%= link_to 'Edit', edit_admin_dataset_path(@dataset.id) %> | <%= link_to 'Delete', admin_dataset_path(@dataset.id), method: 'Delete' %> </h4>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-12'>
      <h3><%= link_to 'All Datasets', admin_datasets_path %></h3>
    </div>
  </div>
</div>
