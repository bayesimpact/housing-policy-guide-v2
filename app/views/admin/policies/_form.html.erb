<div class='form-group'>
  <%= f.label :name, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <%= f.text_field :name %>
  </div>
</div>
<div class='form-group'>
  <%= f.label :summary, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <%= f.text_area :summary, size: '100x5' %>
  </div>
</div>
<div class='form-group'>
  <%= f.label :description, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <%= f.text_area :description, size: '100x5' %>
  </div>
</div>
<div class='form-group'>
  <%= f.label :data_groups, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <% data_groups.each do |data_group| %>
      <%= label_tag do %>
        <%= check_box_tag 'policy[data_group_ids][]', data_group.id, policy.data_groups.include?(data_group) %>
        <%= data_group.name %>
      <% end %>
      <br/>
    <% end %>
  </div>
</div>
<div class='form-group'>
  <%= f.label :organization_text, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <%= f.text_area :organization_text, size: '100x5' %>
  </div>
</div>
<div class='form-group'>
  <%= f.label :resources_text, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <%= f.text_area :resources_text, size: '100x5' %>
  </div>
</div>
<div class='form-group'>
  <%= f.label :thumbnail_image_url, class: 'col-sm-2' %>
  <%= f.filepicker_field :thumbnail_image_url %>
  <div class='col-sm-2 image-preview'>
    <%= filepicker_image_tag policy.thumbnail_image_url, w: 160, h: 160, fit: 'clip' %>
  </div>
</div>
<div class='form-group'>
  <%= f.label :masthead_image_url, class: 'col-sm-2' %>
  <%= f.filepicker_field :masthead_image_url %>
  <div class='col-sm-2 image-preview'>
    <%= filepicker_image_tag policy.masthead_image_url, w: 160, h: 160, fit: 'clip' %>
  </div>
</div>

<div class='form-group'>
  <%= f.label :action_links, class: 'col-sm-2' %>
  <div class='col-sm-10'>
    <% @action_links.each do |action_link| %>
      <div class='row'>
        <div class='col-sm-12'>
          <%= label_tag do %>
            <%= check_box_tag 'policy[action_link_ids][]', action_link.id, policy.action_links.include?(action_link) %>
            <%= action_link.name %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
