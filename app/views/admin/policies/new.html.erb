<div class='container admin'>
  <div class='row'>
    <div class='col-sm-12'>
      <%= form_for @policy, html: { role: 'form', class: 'form-horizontal' } do |f| %>
        <div class='form-group'>
          <%= f.label :name, class: 'col-sm-1' %>
          <div class='col-sm-11'>
            <%= f.text_field :name %>
          </div>
        </div>
        <div class='form-group'>
          <%= f.label :summary, class: 'col-sm-1'%>
          <div class='col-sm-11'>
            <%= f.text_area :summary, size: '100x5' %>
          </div>
        </div>
        <%= f.submit 'Create', class: 'btn btn-default' %>
      <% end %>
    </div>
  </div>
</div>
