<div class='container-fluid' id='masthead' style='background-image: url(<%= @policy.masthead_image_url %>)'>
  <div class='darkener'></div>
  <div class='container'>
    <div class='row'>
      <div class='col-sm-12'>
        <div class='thumbnail'>
          <%= filepicker_image_tag @policy.thumbnail_image_url %>
        </div>
        <div class='name'>
          <h2><%= @policy.name %></h2>
        </div>
      </div>
    </div>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class='col-sm-12'>
      <h3>Summary</h3>
      <%= @policy.summary.html_safe %>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-12'>
      <h3>Description</h3>
      <%= @policy.description.html_safe %>
    </div>
  </div>
  <div class='row'>
    <%= render partial: 'policies/data_viewer', locals: { policy: @policy } %>
  </div>
  <div class='row'>
    <div class='col-sm-12'>
      <h3>Organizations</h3>
      <%= @policy.organization_text.html_safe %>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-12'>
      <h3>Resources</h3>
      <%= @policy.resources_text.html_safe %>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-12'>
      <h3>Service and Action Links</h3>
      <% @policy.action_links.each do |action_link| %>
        <div class='row'>
          <div class='col-sm-12'>
            <h4><%= link_to action_link.name.html_safe, action_link.url %></h4>
          </div>
        </div>
        <div class='row'>
          <div class='col-sm-12'>
            <%= action_link.description.html_safe %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <div class='col-sm-12'>
      <h3><%= link_to 'All Policies', admin_policies_path %></h3>
    </div>
  </div>
</div>
