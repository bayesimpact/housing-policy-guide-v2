<div class='container-fluid' id='data-browser-masthead'>
  <div class='darkener'></div>
  <div class='container'>
    <h2>Data Browser</h2>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class='col-sm-3'>
      <% @data_groups.each do |data_group| %>
        <button type='button'>
          <%= data_group.name %>
        </button>
        <% if !data_group.datasets.nil? %>
          <ul>
            <% data_group.datasets.each do |dataset| %>
              <li><%= dataset.name %></li>
            <% end %>
          </ul>
        <% else %>
          <% data_group.children.each do |child_data_group| %>
            <button type='button'>
              <%= child_data_group.name %>
            </button>
            <ul>
              <% child_data_group.datasets.each do |dataset| %>
                <li><%= dataset.name %></li>
              <% end %>
            </ul>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>